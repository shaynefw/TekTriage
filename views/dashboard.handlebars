<div class="card mb-5">
  <div class="card-body">
    <h3 class="card-title mb-4">My Posts</h3>
    <div class="list-group">
      {{#each posts}}
      <a href="/post/{{id}}" class="list-group-item list-group-item-action">{{title}} ({{createdAt}})</a>
      {{/each}}
    </div>
    <a href="/dashboard/new" class="btn btn-primary mt-3">New Post</a>
  </div>
</div>

<div class="card">
  <div class="card-body">
    <h3 class="card-title mb-4">My Replies</h3>
    <div class="list-group">
      {{#each comments}}
      <a href="/post/{{this.post_id}}" class="list-group-item list-group-item-action">{{this.contents}} {{this.createdAt}} </a>
      {{/each}}
    </div>
  </div>
</div>

<div class="container mt-5">
  <h1 class="mb-4">Edit Post or Comment</h1>
  <form>
    <div class="form-group">
      <label for="post-select">Select a post to edit or delete:</label>
      <select class="form-control" id="post-select" name="post-select">
        <option value="" disabled selected> <--- Please Select ---> </option>
        {{#each posts}}
          <option value="{{this.id}}">{{this.title}}</option>
        {{/each}}
      </select>
      <div class="mt-3">
        <button type="button" class="btn btn-danger d-none" id="delete-post-btn">Delete Post</button>
        <button type="button" class="btn btn-primary d-none" id="edit-post-btn">Edit Post</button>
      </div>
    </div>
    <div class="form-group">
      <label for="comment-select">Select a comment to delete:</label>
      <select class="form-control" id="comment-select" name="comment-select">
        <option value="" disabled selected> <--- Please Select ---> </option>
        {{#each comments}}
          <option value="{{this.id}}">{{this.contents}}</option>
        {{/each}}
      </select>
      <div class="mt-3">
        <button type="button" class="btn btn-danger d-none" id="delete-comment-btn">Delete Comment</button>
      </div>
    </div>
  </form>
</div>

<script src="/js/dashboard.js"></script>