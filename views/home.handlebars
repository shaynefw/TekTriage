<div class="container mt-5">
    <h1 class="text-center mb-5">Welcome to the Blog Site</h1>
    {{#if posts.length}}
    <div class="row">
      {{#each posts}}
      <div class="col-md-6">
        <div class="card mb-4 shadow">
          <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <h6 class="card-subtitle mb-2 text-muted">Posted by {{this.User.username}} on ...</h6>
            <p class="card-text">{{this.body}}</p>
            <a href="/post/{{this.id}}" class="card-link">Read More</a>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
    {{else}}
    <p class="text-center">No blog posts yet. Check back later!</p>
    {{/if}}
  </div>