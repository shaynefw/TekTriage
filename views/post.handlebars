<div class="container mt-5">
    <h1 class="mb-4">{{post.title}}</h1>
    <p class="text-muted mb-4">Posted by {{post.user.username}} on {{ post.created_at}}</p>
    <div class="card mb-4 shadow">
      <div class="card-body">
        <p class="card-text">{{post.contents}}</p>
      </div>
    </div>
    <h3 class="mb-3">Comments</h3>
    {{#if post.comments.length}}
    <div class="list-group mb-5">
      {{#each post.comments}}
      <div class="list-group-item">
        <p class="mb-0">{{this.contents}}</p>
        <small class="text-muted">Posted by {{this.user.username}} on {{this.created_at}}</small>
      </div>
      {{/each}}
    </div>
    {{else}}
    <p>No comments yet.</p>
    {{/if}}
    {{#if isAuthenticated}}
    <form action="/comment/{{post.id}}" method="POST">
      <div class="form-group">
        <label for="comment">Leave a comment:</label>
        <textarea class="form-control" id="comment" name="comment" rows="3"></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    {{else}}
    <p>Please <a href="/signin">sign in</a> to leave a comment.</p>
    {{/if}}
  </div>
