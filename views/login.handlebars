<div class="container mt-5">
    <div class="card">
      <div class="card-body">
        <h3 class="card-title mb-4">Sign In</h3>
        {{#if errorMessage}}
        <div class="alert alert-danger" role="alert">
          {{errorMessage}}
        </div>
        {{/if}}
        <form class="login-form">
          <div class="form-group">
            <label for="username">Username:</label>
            <input type="text" class="form-control" id="username-login" name="username" required>
          </div>
          <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" class="form-control" id="password-login" name="password" required>
          </div>
          <button type="submit" class="btn btn-primary">Sign In</button>
          <a href="/user/signup" class="ml-2">Don't have an account? Sign up here!</a>
        </form>
      </div>
    </div>
  </div>
  <script src="/js/login.js"></script>
