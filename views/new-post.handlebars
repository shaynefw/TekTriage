<form class="newpost-form">
      <div class="form-group">
        <label for="title">Title:</label>
        <input type="text" class="form-control" id="post-title" name="title" required>
      </div>
      <div class="form-group">
        <label for="content">Contents:</label>
        <textarea class="form-control" id="post-contents" name="content" rows="5" required></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Create Post</button>
    </form>

    <script src="/js/new-post.js"></script>